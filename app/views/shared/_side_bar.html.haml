.wrapper
  -# = render 'shared/side_bar'
  .wrapper__side
    .wrapper__side__header
      %p.wrapper__side__header__name
        = current_user.name
      %a.wrapper__side__header__lists
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: 'icon'
        = link_to new_group_path do
          = fa_icon 'pencil-square-o', class: 'icon'
    .wrapper__side__groups
      - current_user.groups.each do |group|
        .wrapper__side__groups__room
          = link_to group_messages_path(group) do
            .wrapper__side__groups__room__name
              = group.name
            .wrapper__side__groups__room__message
              = group.show_last_message



